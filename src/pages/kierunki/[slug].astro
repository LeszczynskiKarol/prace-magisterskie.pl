---
import Layout from '../../layouts/Layout.astro';
import CTA from '../../components/CTA.astro';
import { subjects, getSubjectBySlug, getRelatedSubjects, type Subject } from '../../data/subjects';

export async function getStaticPaths() {
  return subjects.map((subject) => ({
    params: { slug: subject.slug },
    props: { subject },
  }));
}

interface Props {
  subject: Subject;
}

const { subject } = Astro.props;
const relatedSubjects = getRelatedSubjects(subject.relatedSubjects);

// SEO
const seoTitle = `Pisanie prac magisterskich z ${subject.name.toLowerCase()} na zamówienie | Prace-Magisterskie.pl`;
const seoDescription = `${subject.description} Skorzystaj z AI do pisania pracy magisterskiej z ${subject.name.toLowerCase()}. 100% unikalny tekst, bez plagiatów.`;
const seoKeywords = [
  `pisanie prac magisterskich ${subject.name.toLowerCase()}`,
  `praca magisterska ${subject.name.toLowerCase()}`,
  `praca mgr ${subject.name.toLowerCase()}`,
  `pisanie prac ${subject.name.toLowerCase()} na zamówienie`,
  `praca magisterska z ${subject.name.toLowerCase()} na zlecenie`,
];
---

<Layout title={seoTitle} description={seoDescription} keywords={seoKeywords}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 md:pt-40 md:pb-24 gradient-bg overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-20 right-10 w-72 h-72 bg-primary-500/20 rounded-full blur-3xl animate-pulse-glow"></div>
      <div class="absolute bottom-20 left-10 w-72 h-72 bg-accent-500/20 rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 2s;"></div>
    </div>

    <div class="container-custom relative z-10">
      <div class="max-w-4xl">
        <!-- Breadcrumb -->
        <nav class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-6">
          <a href="/" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Strona główna</a>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <a href="/kierunki" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Kierunki</a>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-gray-900 dark:text-white">{subject.name}</span>
        </nav>

        <!-- Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-100 dark:bg-primary-900/30 border border-primary-200 dark:border-primary-800 text-primary-700 dark:text-primary-300 text-sm font-medium mb-6">
          <span class="text-2xl">{subject.icon}</span>
          <span>Pisanie prac z {subject.name.toLowerCase()}</span>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-gray-900 dark:text-white mb-6">
          <span class="gradient-text">{subject.name.charAt(0).toUpperCase() + subject.name.slice(1).toLowerCase()}</span> - pisanie prac magisterskich na zamówienie
        </h1>

        <!-- Description -->
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
          {subject.description}
        </p>

        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="https://smart-edu.ai" 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn-primary text-lg px-8 py-4"
          >
            Zacznij pisać za darmo
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
          <a href="#tematy" class="btn-secondary text-lg px-8 py-4">
            Zobacz przykładowe tematy
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Long Description Section -->
  <section class="section-padding bg-white dark:bg-gray-950">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="card p-5 flex items-center gap-4">
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 dark:text-white">100% Unikalność</h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">Każda praca od podstaw</p>
            </div>
          </div>
          <div class="card p-5 flex items-center gap-4">
            <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 dark:text-white">Szybka realizacja</h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">Gotowe w godziny</p>
            </div>
          </div>
          <div class="card p-5 flex items-center gap-4">
            <div class="w-12 h-12 bg-accent-100 dark:bg-accent-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-accent-600 dark:text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900 dark:text-white">Profesjonalna bibliografia</h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">Automatyczne źródła</p>
            </div>
          </div>
        </div>

        <h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-6">
          O pracach magisterskich z {subject.name.toLowerCase()}
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed mb-8">
          {subject.longDescription}
        </p>
      </div>
    </div>
  </section>

  <!-- Topics Section -->
  <section id="tematy" class="section-padding bg-gray-50 dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-4 text-center">
          Popularne tematy prac magisterskich z <span class="gradient-text">{subject.name.toLowerCase()}</span>
        </h2>
        <p class="text-gray-600 dark:text-gray-400 text-center mb-10">
          Przykładowe obszary tematyczne, w których nasz asystent AI pomoże Ci napisać pracę magisterską
        </p>

        <div class="grid sm:grid-cols-2 gap-4">
          {subject.topics.map((topic, index) => (
            <div class="card p-5 flex items-start gap-4 hover:border-primary-300 dark:hover:border-primary-700 transition-colors">
              <div class="w-10 h-10 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                <span class="text-primary-600 dark:text-primary-400 font-bold text-sm">{(index + 1).toString().padStart(2, '0')}</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 dark:text-white">{topic}</h3>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Methodologies Section -->
  <section class="section-padding bg-white dark:bg-gray-950">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-4 text-center">
          Metodologie badawcze w pracach z {subject.name.toLowerCase()}
        </h2>
        <p class="text-gray-600 dark:text-gray-400 text-center mb-10">
          AI zna i stosuje właściwe metodologie badawcze dla Twojego kierunku studiów
        </p>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
          {subject.methodologies.map((method) => (
            <div class="flex items-center gap-3 p-4 bg-gray-50 dark:bg-gray-900 rounded-xl">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700 dark:text-gray-300">{method}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- How it works mini -->
  <section class="section-padding bg-gray-50 dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-10 text-center">
          Jak napisać pracę magisterską z {subject.name.toLowerCase()} z AI?
        </h2>

        <div class="grid md:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-600 to-accent-600 rounded-2xl flex items-center justify-center text-white font-display font-bold text-xl mx-auto mb-4">1</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Podaj temat</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Wpisz temat pracy i wytyczne promotora</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-600 to-accent-600 rounded-2xl flex items-center justify-center text-white font-display font-bold text-xl mx-auto mb-4">2</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">AI tworzy strukturę</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Automatyczny konspekt i plan rozdziałów</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-600 to-accent-600 rounded-2xl flex items-center justify-center text-white font-display font-bold text-xl mx-auto mb-4">3</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Generuj treść</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">AI pisze profesjonalnym językiem naukowym</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-600 to-accent-600 rounded-2xl flex items-center justify-center text-white font-display font-bold text-xl mx-auto mb-4">4</div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Pobierz pracę</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">Eksportuj do DOCX z bibliografią</p>
          </div>
        </div>

        <div class="text-center mt-10">
          <a 
            href="https://smart-edu.ai" 
            target="_blank" 
            rel="noopener noreferrer"
            class="btn-primary text-lg px-8 py-4"
          >
            Wypróbuj Smart-Edu.ai za darmo
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Subjects -->
  {relatedSubjects.length > 0 && (
    <section class="section-padding bg-white dark:bg-gray-950">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-6 text-center">
            Powiązane kierunki
          </h2>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            {relatedSubjects.map((related) => (
              <a 
                href={`/kierunki/${related.slug}`}
                class="card p-4 text-center hover:border-primary-300 dark:hover:border-primary-700 transition-colors"
              >
                <span class="text-3xl block mb-2">{related.icon}</span>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">{related.name}</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <CTA 
    title={`Napisz swoją pracę magisterską z ${subject.name.toLowerCase()} już teraz`}
    subtitle="Dołącz do tysięcy studentów, którzy skorzystali z pomocy AI. Pierwszy tekst wygenerujesz za darmo."
  />

  <!-- Schema.org -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": `Pisanie prac magisterskich z ${subject.name.toLowerCase()}`,
    "description": seoDescription,
    "provider": {
      "@type": "Organization",
      "name": "Smart-Edu.ai",
      "url": "https://smart-edu.ai"
    },
    "serviceType": `Pisanie prac akademickich - ${subject.name}`,
    "areaServed": "PL"
  })} />
</Layout>