---
import Layout from '../../layouts/Layout.astro';
import CTA from '../../components/CTA.astro';
import { subjects } from '../../data/subjects';

const seoTitle = "Pisanie prac magisterskich - wszystkie kierunki | Prace-Magisterskie.pl";
const seoDescription = "Pisanie prac magisterskich z każdego kierunku studiów. Socjologia, psychologia, pedagogika, prawo, ekonomia, zarządzanie i wiele innych. Skorzystaj z AI i napisz pracę magisterską szybciej.";
const seoKeywords = [
  "pisanie prac magisterskich",
  "kierunki studiów",
  "praca magisterska",
  "prace dyplomowe",
  "pisanie prac na zamówienie"
];

// Group subjects by category
const categories = [
  {
    name: 'Nauki społeczne',
    subjects: subjects.filter(s => ['socjologia', 'psychologia', 'pedagogika', 'politologia', 'kulturoznawstwo'].includes(s.slug))
  },
  {
    name: 'Prawo i administracja',
    subjects: subjects.filter(s => ['prawo', 'administracja', 'bezpieczenstwo'].includes(s.slug))
  },
  {
    name: 'Ekonomia i biznes',
    subjects: subjects.filter(s => ['ekonomia', 'zarzadzanie', 'marketing', 'logistyka'].includes(s.slug))
  },
  {
    name: 'Humanistyka',
    subjects: subjects.filter(s => ['filologia-polska', 'filologia-angielska', 'historia'].includes(s.slug))
  },
  {
    name: 'Nauki ścisłe i techniczne',
    subjects: subjects.filter(s => ['informatyka'].includes(s.slug))
  },
  {
    name: 'Nauki o zdrowiu',
    subjects: subjects.filter(s => ['pielegniarstwo'].includes(s.slug))
  }
];
---

<Layout title={seoTitle} description={seoDescription} keywords={seoKeywords}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 md:pt-40 md:pb-24 gradient-bg overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-20 right-10 w-72 h-72 bg-primary-500/20 rounded-full blur-3xl animate-pulse-glow"></div>
      <div class="absolute bottom-20 left-10 w-72 h-72 bg-accent-500/20 rounded-full blur-3xl animate-pulse-glow" style="animation-delay: 2s;"></div>
    </div>

    <div class="container-custom relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Breadcrumb -->
        <nav class="flex items-center justify-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-6">
          <a href="/" class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Strona główna</a>
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-gray-900 dark:text-white">Kierunki</span>
        </nav>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-gray-900 dark:text-white mb-6">
          Pisanie prac magisterskich - <span class="gradient-text">wszystkie kierunki</span>
        </h1>

        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          Wybierz swój kierunek studiów i zacznij pisać profesjonalną pracę magisterską z pomocą sztucznej inteligencji.
        </p>

        <!-- Stats -->
        <div class="flex flex-wrap items-center justify-center gap-8 text-center">
          <div>
            <div class="text-4xl font-display font-bold gradient-text">{subjects.length}</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">kierunków studiów</div>
          </div>
          <div class="w-px h-12 bg-gray-200 dark:bg-gray-700 hidden sm:block"></div>
          <div>
            <div class="text-4xl font-display font-bold gradient-text">100%</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">unikalnego tekstu</div>
          </div>
          <div class="w-px h-12 bg-gray-200 dark:bg-gray-700 hidden sm:block"></div>
          <div>
            <div class="text-4xl font-display font-bold gradient-text">24/7</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">dostępność AI</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- All Subjects Grid -->
  <section class="section-padding bg-white dark:bg-gray-950">
    <div class="container-custom">
      <div class="max-w-6xl mx-auto">
        <!-- Quick links -->
        <div class="flex flex-wrap justify-center gap-2 mb-12">
          {categories.map((cat) => (
            <a 
              href={`#${cat.name.toLowerCase().replace(/\s+/g, '-')}`}
              class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-full text-sm font-medium text-gray-700 dark:text-gray-300 hover:bg-primary-100 dark:hover:bg-primary-900/30 hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
            >
              {cat.name}
            </a>
          ))}
        </div>

        <!-- Categories -->
        {categories.map((category) => (
          <div id={category.name.toLowerCase().replace(/\s+/g, '-')} class="mb-12 scroll-mt-24">
            <h2 class="text-2xl font-display font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
              <span class="w-1 h-8 bg-gradient-to-b from-primary-600 to-accent-600 rounded-full"></span>
              {category.name}
            </h2>
            <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
              {category.subjects.map((subject) => (
                <a 
                  href={`/kierunki/${subject.slug}`}
                  class="card p-6 group hover:border-primary-300 dark:hover:border-primary-700 hover:shadow-lg transition-all"
                >
                  <div class="flex items-start gap-4">
                    <span class="text-4xl group-hover:scale-110 transition-transform">{subject.icon}</span>
                    <div class="flex-1 min-w-0">
                      <h3 class="font-display font-bold text-gray-900 dark:text-white mb-1 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                        {subject.name}
                      </h3>
                      <p class="text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
                        Pisanie prac magisterskich z {subject.name.toLowerCase()} na zamówienie
                      </p>
                    </div>
                    <svg class="w-5 h-5 text-gray-400 group-hover:text-primary-600 dark:group-hover:text-primary-400 group-hover:translate-x-1 transition-all flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Full List (SEO) -->
  <section class="section-padding bg-gray-50 dark:bg-gray-900">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-8 text-center">
          Wszystkie kierunki - pisanie prac magisterskich
        </h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-3">
          {subjects.map((subject) => (
            <a 
              href={`/kierunki/${subject.slug}`}
              class="p-3 bg-white dark:bg-gray-800 rounded-xl text-center hover:bg-primary-50 dark:hover:bg-primary-900/20 border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-700 transition-all group"
            >
              <span class="text-2xl block mb-1 group-hover:scale-110 transition-transform">{subject.icon}</span>
              <span class="text-xs font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 dark:group-hover:text-primary-400">{subject.name}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Why choose section -->
  <section class="section-padding bg-white dark:bg-gray-950">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-display font-bold text-gray-900 dark:text-white mb-6 text-center">
          Dlaczego wybrać <span class="gradient-text">Smart-Edu.ai</span> do pisania pracy?
        </h2>

        <div class="grid md:grid-cols-2 gap-6 mt-10">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-gray-900 dark:text-white mb-1">Specjalizacja w każdym kierunku</h3>
              <p class="text-gray-600 dark:text-gray-400">AI zna specyfikę każdej dziedziny - od metodologii po styl naukowy</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-gray-900 dark:text-white mb-1">Błyskawiczna generacja</h3>
              <p class="text-gray-600 dark:text-gray-400">Kompletna praca w godziny zamiast tygodni oczekiwania</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-accent-100 dark:bg-accent-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-accent-600 dark:text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-gray-900 dark:text-white mb-1">100% unikalny tekst</h3>
              <p class="text-gray-600 dark:text-gray-400">Każda praca generowana od podstaw - zero plagiatów</p>
            </div>
          </div>
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900/30 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-display font-bold text-gray-900 dark:text-white mb-1">Oszczędność pieniędzy</h3>
              <p class="text-gray-600 dark:text-gray-400">Znacznie taniej niż tradycyjne usługi pisania prac</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA />

  <!-- Schema.org -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Kierunki studiów - pisanie prac magisterskich",
    "description": seoDescription,
    "numberOfItems": subjects.length,
    "itemListElement": subjects.map((subject, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "url": `https://prace-magisterskie.pl/kierunki/${subject.slug}`,
      "name": `Pisanie prac magisterskich z ${subject.name.toLowerCase()}`
    }))
  })} />
</Layout>